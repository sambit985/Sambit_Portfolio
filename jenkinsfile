pipeline {
    agent any
    tools {
        node 'nodejs-20.5.0'
      }
    environment {
        PATH = "$PATH:/usr/bin/node"
        SSH_COMMAND = "ssh -i /var/lib/jenkins/.ssh/id_rsa"
    }

    stages {
        stage('GetCode') {
            steps {
                git branch: 'master', url: 'https://github.com/sambit985/Sambit_Portfolio.git'
            }
        }

      stage('Build') {
     options {
         timeout(time: 10, unit: 'MINUTES')
      }
     steps {
         script {
             echo 'Installing dependencies...'
             sh 'npm install'

             echo 'Building the app...'
             sh 'npm run build'
         }
     }
 }


        stage('SonarQube analysis') {
            steps {
                withSonarQubeEnv('sonar') {
                    sh "npm install sonar-scanner"
                    sh "npm run sonar-scanner"
                }
            }
        }

    stage('deploy') {
     steps {
            sh "rsync -azh --info=progress2 --info=name0 -e $SSH_COMMAND  /var/lib/jenkins/workspace/ ubuntu@3.81.114.150:/home/ubuntu/host/"
       }
     }
  }
}
